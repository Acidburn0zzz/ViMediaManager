#tag ModuleProtected Module CC	#tag Method, Flags = &h0		Sub CCPropsDel()		  LstBox = Nil		  SectionName = ""		End Sub	#tag EndMethod	#tag Method, Flags = &h0		Sub CCPropsSet(GetListBox as Listbox = Nil)		  		  Select Case wndMain.ppMain.Value		    		  Case 0		    LstBox = wndMain.lstMovies		    SectionName = Localizable.Movies		    		  Case 1		    LstBox = wndMain.lstTVShows		    SectionName = Localizable.TVShows		    		  Case 2		    'LstBox = wndMain.lstAnime		    SectionName = Localizable.Anime		    		  End Select		End Sub	#tag EndMethod	#tag Method, Flags = &h0		Sub ReloadList()		  		  		  		  		  If LstBox = lstMovies Then		    ccSearchBoxMovies.edtSearch.Text = " "		    ccSearchBoxMovies.edtSearch.Text = ""		    lstMovies.CreateList		  End If		  'If LstBox = lstTVShows Then lstTVShows.CreateList		  'If LstBox = lstAnime Then lstAnime.CreateList		  ActBar( ppMain.Value ).Text = Str( LstBox.ListCount ) + " " + SectionName		  ActBar( ppMain.Value ).Invalidate		End Sub	#tag EndMethod	#tag Note, Name = CC					#tag EndNote	#tag Property, Flags = &h0		LstBox As Listbox = Nil	#tag EndProperty	#tag Property, Flags = &h0		SectionName As String	#tag EndPropertyEnd Module#tag EndModule